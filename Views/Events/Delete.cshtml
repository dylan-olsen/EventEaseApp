@model EventEaseApp.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container">
    <h1 class="page-title">Delete Event</h1>

    <p class="text-danger">Are you sure you want to delete <strong>@Model.EventName</strong> scheduled on <strong>@Model.EventDate.ToString("MMMM dd, yyyy")</strong>?</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />

        <div class="btn-container">
            <button type="submit" class="btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>
