@model EventEaseApp.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<style>
    .container {
        max-width: 500px;
        margin: auto;
        padding: 20px;
        background: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        text-align: center;
    }

    .warning-text {
        font-size: 1.2em;
        color: #D9534F;
        font-weight: bold;
    }

    .btn-container {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .btn-danger, .btn-secondary {
        padding: 10px 20px;
        font-size: 1em;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .btn-danger {
        background-color: #D9534F;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-secondary {
        background-color: #777;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #555;
        }
</style>

<div class="container">
    <h1 style="color: #003366;">Delete Venue</h1>
    <p class="warning-text">Are you sure you want to delete "@Model.VenueName"?</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VenueId" />
        <div class="btn-container">
            <button type="submit" class="btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>
