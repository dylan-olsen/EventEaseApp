@model EventEaseApp.Models.Venue

@{
    ViewData["Title"] = "Create Venue";
}

<style>
    /* Container Styling */
    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        text-align: center;
    }

    /* Heading */
    .page-title {
        font-size: 1.8em;
        color: #003366;
        font-weight: bold;
    }

    /* Form Styling */
    label {
        font-weight: bold;
        color: #003366;
        display: block;
        text-align: left;
        margin-top: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 1em;
    }

    /* Button Container */
    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    /* Buttons */
    .btn-primary, .btn-secondary {
        padding: 10px 15px;
        font-size: 1em;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .btn-primary {
        background-color: #003366;
        color: white;
    }

        .btn-primary:hover {
            background-color: #F4A261;
        }

    .btn-secondary {
        background-color: #777;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #555;
        }
</style>

<div class="container">
    <h1 class="page-title">Create a New Venue</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label for="VenueName">Venue Name</label>
        <input asp-for="VenueName" class="form-control" placeholder="Enter venue name" />

        <label for="Location">Location</label>
        <input asp-for="Location" class="form-control" placeholder="Enter location" />

        <label for="Capacity">Capacity</label>
        <input asp-for="Capacity" class="form-control" type="number" placeholder="Enter capacity" />

        <label for="ImageUrl">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Paste image URL here" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>

        <div class="btn-container">
            <button type="submit" class="btn-primary">Create Venue</button>
            <a asp-action="Index" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>
