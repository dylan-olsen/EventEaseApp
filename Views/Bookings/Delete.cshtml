@model EventEaseApp.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="container">
    <h1 style="color: #003366;">Delete Booking</h1>
    <p class="warning-text">Are you sure you want to delete the booking for "@Model.Event.EventName" at "@Model.Venue.Location"?</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />
        <div class="btn-container">
            <button type="submit" class="btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>
